{
  "$schema": "https://json.schemastore.org/launchsettings.json",
  "profiles": {
    "Backend Debug": {
      "commandName": "Project",
      "launchBrowser": true,
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "applicationUrl": "https://localhost:55908;http://localhost:55909"
    },
    "Backend Release": {
      "commandName": "Project",
      "launchBrowser": false,
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Production"
      },
      "applicationUrl": "https://localhost:55908;http://localhost:55909"
    },
    "Backend Debug + Frontend Dev": {
      "commandName": "Executable",
      "executablePath": "powershell.exe",
      "commandLineArgs": "-ExecutionPolicy Bypass -File scripts/launch.ps1 -BackendConfig Debug -FrontendMode dev",
      "workingDirectory": "../.."
    },
    "Backend Release + Frontend Dev": {
      "commandName": "Executable",
      "executablePath": "powershell.exe",
      "commandLineArgs": "-ExecutionPolicy Bypass -File scripts/launch.ps1 -BackendConfig Release -FrontendMode dev",
      "workingDirectory": "../.."
    },
    "Backend Release + Frontend Release": {
      "commandName": "Executable",
      "executablePath": "powershell.exe",
      "commandLineArgs": "-ExecutionPolicy Bypass -File scripts/launch.ps1 -BackendConfig Release -FrontendMode release",
      "workingDirectory": "../.."
    }
  }
}
